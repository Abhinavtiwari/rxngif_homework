<h1> Editing a picture </h1>

<% @p = Picture.find(params[:id]) %>
<form action="http://localhost:3000/update_picture/<%= params[:id] %>">
  <div>
    <label for="the_caption">Caption:</label>

    <input id="the_caption" type="text" name="caption" value="<%= @p.caption %>">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" name="source" value="<%= @p.source %>">
  </div>
  <div>
    <input type="submit" value="Edit Picture">
  </div>
</form>